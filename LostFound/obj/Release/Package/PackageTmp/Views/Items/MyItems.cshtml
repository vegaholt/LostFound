@model LostFound.Models.MyItemsViewModel

@{
    ViewBag.Title = "Mine registreringer";
}

<h3>Mine funnede gjenstander</h3>

<table class="table table-striped table-responsive">
    <tr class="success">
        <th>Tittel</th>
        <th class="visible-lg">Beskrivelse</th>
        <th class="hidden-xs">Kategori</th>
        <th class="hidden-xs">Fylke</th>
        <th class="hidden-xs">Dato</th>
        <th></th>
    </tr>
    @foreach (var item in Model.FoundItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name, new { @class = "trunk8" })
            </td>
            <td class="visible-lg">
                @Html.DisplayFor(modelItem => item.Description, new { @class = "trunk8" })
            </td>
            <td class="hidden-xs">
                @Html.DisplayFor(modelItem => item.Category.Name, new { @class = "trunk8" })
            </td>
            <td class ="hidden-xs">
                @Html.DisplayFor(modelItem => item.County.Name, new { @class = "trunk8" })
            </td>
            <td class="hidden-xs">
                @Html.DisplayFor(modelItem => item.FoundDate)
            </td>
            <td style="min-width: 240px;">
                @Html.ActionLink("Rediger", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Slett", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

<br />

